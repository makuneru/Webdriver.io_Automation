pipeline {
    agent {
        kubernetes {
                cloud 'kubernetes'
                label 'k8s-agent-oci'
        }
    }
    tools {nodejs 'NodeJS'}
    stages {
        stage("Install package dependencies") {
            steps {
                script {
                    echo 'Installing package dependencies'
                    sh 'npm install'
                }
            }
        }
        stage("Run Automated Tests") {
            steps {
                script {
                    echo ' Running Automated Tests'
                    sh 'npm run wdio'
                }
            }
        }
    }
}
