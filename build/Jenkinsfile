pipeline {
    agent {
        kubernetes {
                cloud 'kubernetes'
                label 'k8s-agent-oci'
        }
    }
    tools {NodeJS "nodejs-17.8.0"}
    stages {
        stage("Install package dependencies") {
            steps {
                script {
                    sh 'npm install -f'
                }
            }
        }
        stage("Run Automated Tests") {
            steps {
                script {
                    sh 'npm run wdio'
                }
            }
        }
    }
}